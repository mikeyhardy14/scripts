<form method="post" asp-action="Save">
  <div class="excel-filter" data-visible-only="true">
    <div class="ef-header">
      <div class="ef-title">Filter Items</div>
      <input class="ef-search" type="text" placeholder="Search items…" aria-label="Search items" />
    </div>

    <div class="ef-actions">
      <a class="ef-link" href="#" role="button" data-action="select-all">Select all</a>
      <span class="ef-sep">•</span>
      <a class="ef-link" href="#" role="button" data-action="clear">Clear</a>
    </div>

    <div class="ef-list" role="group" aria-label="Filter options">
      @foreach (var item in CurrentState.Locations) {
        <label class="ef-option">
          <input type="checkbox" name="SelectedIds" value="@item" />
          <span class="ef-check"></span>
          <span class="ef-text">@item</span>
        </label>
      }
    </div>

    <div class="ef-footer">
      <button type="submit" class="ef-btn">Apply</button>
    </div>
  </div>
</form>
